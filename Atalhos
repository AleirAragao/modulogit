

	F2 = ALTERNA ENTRE ELES ( cima e baixo ) - VOLTA NO SHIFT + F2

	TAB = ADIANTA TODO O BLOCO SELECIONADO	

	CONTROL + ; = COMENTA A LINHA NA LINGUAGEM UTILIZADA NO ARQUIVO

	SHIFT + TAB = RECUA TODA A SELEÇÃO

	CONTROL + LINHA QUALQUER = MULTIPLO CURSOR PARA EDIÇÃO SIMULTÂNEA EM CONJUNTO

	CONTROL + Z = DESFAZ

	CONTROL + SHIFT + Z = REFAZ

	CONTROL + H = LOCALIZA E SUBSTITUI A(S) PALAVRA(S) DENTRO DO ARQUIVO - UTILIZAR OS BOTOES QUE SURGIRAO NO ATALHO

	CONTROL + F2 = BOOKMARKS ( MARCA E DESMARCA ) 

	CONTROL + N = ABRE NOVO ARQUIVO EM BRANCO DENTRO DO PROJETO

	CONTROL + O = ABRE ARQUIVO SALVO FORA DO PROJETO

	CONTROL + F = BUSCA ( DENTRO DE UM ARQUIVO )... digita... ENTER se precisar ir passando nas seleções 
	OU SHIFT + ENTER para voltar nas seleções + ESC ... redigita  troca para substituir 

	ALT + F3= SELECIONA TODA A SELEÇÃO DO CONTROL+F

	CONTROL + D = SELECIONA A PALAVRA QUANDO O CURSOR PISCAR É SÓ DIGITAR A SUBSTITUIÇÃO OU
	VAI APERTANDO E ELE VAI PROCURANDO A MESMA PALAVRA NAS PROXIMAS LINHAS
	OBS.: SE QUISER SUBSTITUIR VAI REPETINDO CONTROL + D ATÉ SELECIONAR TODAS E DEPOIS É SÓ DIGITAR A SUBSTITUIÇÃO

	CONTROL + P = SELECIONA ENTRE OS ARQUIVOS ABERTOS NO PROJETO 

	CONTROL + L = SELECIONA A LINHA E EXPANDE PARA UM BLOCO	

	CONTROL + SHIFT + CIMA OU BAIXO = SELECIONA E ARRASTA A LINHA OU O BLOCO ENTRE AS LINHAS

	CONTROL + SHIFT + D = DUPLICA A LINHA

	CONTROL + SHIFT+ F= FIND, WHERE AND REPLACE ( PESQUISA DENTRO DE VARIOS ARQUIVOS)

	CONTROL + SHIFT + J = SELECIONA O BLOCO DENTRO DA DIV OU DO CSS E VAI EXPANDINDO PARA OS PAIS 
	( FUNCIONA POR INDENTACAO - VAI SEPARANDO O QUE TA INDENTADO" )

	CONTROL + K + CONTROL + B = OCULTA E REAPARECE A BARRA LATERAL



#FIM DE ATALHOS#







